<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Container.Panel_4"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/siv_item_common_logo"
        style="@style/Logo"/>

    <LinearLayout
        style="@style/Container.Panel_4"
        android:layout_width="0dip"
        android:layout_height="48dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shopping_title"
            style="@style/TextView.Green"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="标题"/>

        <TextView
            android:id="@+id/tv_shopping_price"
            style="@style/TextView.Orange"
            android:layout_height="0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/distance_4_size"
            android:layout_weight="1"
            android:text="价格"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_shopping_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-2dp"
            android:background="@mipmap/btn_minus"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_shopping_good_num"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1.0"
            android:background="@mipmap/tv_num_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/font_black"/>

        <ImageButton
            android:id="@+id/btn_shopping_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:background="@mipmap/btn_add"
            android:contentDescription="@null"/>

    </LinearLayout>
</LinearLayout>