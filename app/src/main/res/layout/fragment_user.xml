<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout style="@style/ToolBar">

        <TextView
            style="@style/ToolBar.CenterTitle"
            android:text="个人"/>

        <ImageView
            android:id="@+id/iv_add"
            style="@style/ToolBar.RightImage"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/user_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/font_light_green"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/font_light_green"
        app:tabTextColor="@color/font_gray"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
